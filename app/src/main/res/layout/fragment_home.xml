<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Recharge"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/recharge"
        app:layout_constraintStart_toStartOf="@+id/recharge"
        app:layout_constraintTop_toBottomOf="@+id/recharge" />

    <TextView
        android:id="@+id/text_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Service"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/service_page"
        app:layout_constraintStart_toStartOf="@+id/service_page"
        app:layout_constraintTop_toBottomOf="@+id/service_page" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recharge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toStartOf="@id/service_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_money" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/service_page"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recharge"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_shopping_bag" />

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>